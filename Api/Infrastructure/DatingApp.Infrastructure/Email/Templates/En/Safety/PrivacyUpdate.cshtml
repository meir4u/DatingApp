@{
    ViewData["Title"] = "Privacy Policy Update";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
</head>
<body>
    <h1>Important Privacy Policy Update</h1>
    <p>Hello @Model.UserName,</p>
    <p>We’ve updated our privacy policy. These changes may affect how your data is collected, used, and stored on our platform. Please review the new policy at the link below.</p>
    <p><a href="@Model.PrivacyPolicyLink">Read Privacy Policy</a></p>
</body>
</html>
