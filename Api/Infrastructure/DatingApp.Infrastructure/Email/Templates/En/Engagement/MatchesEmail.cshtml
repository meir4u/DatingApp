@{
    ViewData["Title"] = "Your Weekly Matches";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
</head>
<body>
    <h1>Check Out Your New Matches!</h1>
    <p>Hello @Model.UserName,</p>
    <p>We've found some new matches based on your preferences. Here are some profiles you might like:</p>
    <ul>
        @foreach (var match in Model.Matches)
        {
            <li><a href="@match.ProfileLink">@match.Name</a> - @match.Age, @match.Location</li>
        }
    </ul>
    <p>See more by logging into the app!</p>
</body>
</html>
